<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <!--tools:context="com.johnhanlan.newsfeeds.FullArticle">-->

    <TextView
        android:id="@+id/full_article_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/full_article_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_article_title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/full_article_link"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_article_description"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/full_article_pubDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_article_link"
        android:textSize="10sp" />

</RelativeLayout>
